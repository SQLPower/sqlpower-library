        </dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>java.net</id>
			<url>http://download.java.net/maven/2</url>
			<layout>default</layout>
		</repository>
		<repository>
            <id>maven-central</id>
            <url>http://repo2.maven.org/maven2/</url>
        </repository>
        <repository>
            <id>java.net</id>
