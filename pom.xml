<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>ca.sqlpower</groupId>
	<artifactId>sqlpower-library</artifactId>
	<packaging>jar</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>sqlpower-library</name>
	<url>http://code.google.com/p/sqlpower-library</url>

	<organization>
		<name>SQL Power Group Inc.</name>
		<url>http://www.sqlpower.ca/</url>
	</organization>

	<licenses>
		<license>
			<name>GNU Public License Version 3</name>
			<url>http://www.gnu.org/licenses/gpl.html</url>
		</license>
	</licenses>

	<build>
		<directory>build</directory>
		<sourceDirectory>src</sourceDirectory>
		<testSourceDirectory>regress</testSourceDirectory>
		<outputDirectory>build</outputDirectory>
		<testOutputDirectory>build-tests</testOutputDirectory>

		<resources>
			<resource>
				<directory>
					src/ca/sqlpower/validation/swingui
				</directory>
				<targetPath>ca/sqlpower/validation/swingui</targetPath>
			</resource>
			<resource>
				<directory>
					src/ca/sqlpower/swingui/query
				</directory>
				<targetPath>ca/sqlpower/swingui/query</targetPath>
			</resource>
			<resource>
				<directory>
					src/ca/sqlpower/sql
				</directory>
				<targetPath>ca/sqlpower/sql</targetPath>
			</resource>
			<resource>
				<directory>
					src/ca/sqlpower/swingui/db
				</directory>
				<targetPath>ca/sqlpower/swingui/db</targetPath>
			</resource>
			<resource>
				<directory>
					src/ca/sqlpower/swingui
				</directory>
				<targetPath>ca/sqlpower/swingui</targetPath>
			</resource>
			<resource>
                <directory>
                    src/ca/sqlpower/sqlobject
                </directory>
                <targetPath>ca/sqlpower/sqlobject</targetPath>
            </resource>
            <resource>
                <directory>
                    src/ca/sqlpower/demodata
                </directory>
                <targetPath>ca/sqlpower/demodata</targetPath>
            </resource>
			<resource>
				<directory>src</directory>
				<includes>
					<include>log4j.properties</include>
					<include>**/messages*.properties</include>
				</includes>
			</resource>
		</resources>

		<testResources>
			<testResource>
				<directory>
					src/ca/sqlpower/validation/swingui
				</directory>
				<targetPath>ca/sqlpower/validation/swingui</targetPath>
			</testResource>
		</testResources>

		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<!-- You must set fork to true if you want to use a non-default JDK-->
					<!--<fork>true</fork>-->
					<!-- You MUST set this if your default JDK is not Java 5 -->
					<!--<executable>${JAVA_5_HOME}/bin/javac</executable> -->
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
						<configuration>
							<testOutputDirectory>build-tests</testOutputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
		        	<testFailureIgnore>true</testFailureIgnore>
					<reportsDirectory>build/reports</reportsDirectory>
					<systemProperties>
						<property>
							<name>java.util.prefs.PreferencesFactory</name>
							<value>prefs.PreferencesFactory</value>
						</property>
					</systemProperties>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<configuration>
					<outputDirectory>build/reports</outputDirectory>
					<reportsDirectory>build/reports</reportsDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-pmd-plugin</artifactId>
				<configuration>
					<targetJdk>1.5</targetJdk>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>findbugs-maven-plugin</artifactId>
				<configuration>
				  <findbugsXmlOutput>true</findbugsXmlOutput>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

